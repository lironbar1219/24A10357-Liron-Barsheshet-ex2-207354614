<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_200"
    android:backgroundTint="@color/light_blue_200">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="80sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_play_with_arrows_slow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_play_with_arrows_slow"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Play in arrows mode (slow)"
        app:layout_constraintTop_toBottomOf="@id/menu_title"
        app:layout_constraintBottom_toTopOf="@+id/button_play_with_arrows_fast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_play_with_arrows_fast"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Play in arrows mode (fast)"
        app:layout_constraintTop_toBottomOf="@id/button_play_with_arrows_slow"
        app:layout_constraintBottom_toTopOf="@+id/button_play_with_sensors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_play_with_sensors"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Play in sensors mode"
        app:layout_constraintTop_toBottomOf="@+id/button_play_with_arrows_fast"
        app:layout_constraintBottom_toTopOf="@id/button_records"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_records"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Jump to the record table"
        app:layout_constraintBottom_toTopOf="@id/button_exit"
        app:layout_constraintTop_toBottomOf="@id/button_play_with_sensors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_exit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        app:layout_constraintTop_toBottomOf="@id/button_records"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
